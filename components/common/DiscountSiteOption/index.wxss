.card {
    width: 375rpx;
}

/* title */
.card .title-container {
    width: 100%;
    display: flex;
    height: 60rpx;
    padding: 15rpx;
    align-items: center;
    justify-content: space-between;
}

.card .title-container .title {
    font-size: 30rpx;
    font-weight: bold;
}

.card .title-container .countdown {
    padding: 0 20rpx;
    font-size: 24rpx;
    border: 1rpx solid #f0f0f0;
    border-radius: 10rpx;
}

/* good */

.card .good-container {
    display: flex;
    justify-content: space-around;
}

.card .good-container .good-item {
    width: 155rpx;
    margin: 0 10rpx;
}

.card .good-container .good-item .img-container {
    position: relative;
    width: 100%;
    height: 100rpx;
}

.card .good-container .good-item .img-container image {
    width: 155rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.card .good-container .good-item .img-container .discount {
    position: absolute;
    bottom: 10rpx;
    left: 10rpx;
    padding: 5rpx 10rpx;
    background-color: #f55f5f;
    color: #fff;
    font-size: 20rpx;
}

.card .good-container .good-item .desc {
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.card .good-container .good-item .price-container {
    display: flex;
    justify-content: space-evenly;
    align-items: flex-end;
}

.card .good-container .good-item .price-container .price {
    color: #f6621c;
    font-size: 26rpx;
}

.card .good-container .good-item .price-container .prev-price {
    color: #777;
    font-size: 20rpx;
    text-decoration: line-through;
}
