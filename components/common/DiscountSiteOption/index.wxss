.option {
    width: 90%;
    padding: 5%;
}

.option .img-container {
    position: relative;
    height: 100rpx;
}

.option .img-container .discount {
    position: absolute;
    bottom: 10rpx;
    left: 10rpx;
    padding: 5rpx 10rpx;
    background-color: #f55f5f;
    color: #fff;
    font-size: 20rpx;
}

.option .img-container image {
    width: 100%;
    height: 100rpx;
    border-radius: 10rpx;
}

.option .desc {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
}

.option .price-container {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.option .price-container .price {
    color: #f6621c;
    font-size: 26rpx;
}

.option .price-container .prev-price {
    color: #777;
    font-size: 20rpx;
    text-decoration: line-through;
}
